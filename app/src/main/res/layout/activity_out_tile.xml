<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kyliejue.bbafinalproject.OutTileActivity">

    <Button
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/soundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSound"
        android:text="Sound"
        app:layout_constraintTop_toBottomOf="@+id/textButton"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        app:layout_constraintTop_toBottomOf="@+id/soundButton"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/flashlightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFlashlight"
        android:text="FlashLight"
        app:layout_constraintTop_toBottomOf="@+id/cameraButton"
        tools:layout_editor_absoluteX="30dp" />

</android.support.constraint.ConstraintLayout>
